@model ENEKweb.Areas.Admin.Models.Manage.UserModel
@{
    ViewData["Title"] = "Profile";
}

<h2>@ViewData["Title"]</h2>
@await Html.PartialAsync("_StatusMessage", TempData["StatusMessage"])
<div class="container-fluid p-0">
    <div class="row no-gutters">
        <div class="col-md-4">
            <form id="profile-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.PhoneNumber"></label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" />
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Salvesta muudatused</button>
            </form>
            <a asp-area="Admin" asp-controller="Manage" asp-action="ChangePassword" title="Vaheta Parooli" class="btn btn-secondary mt-2">Vaheta Parool</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
