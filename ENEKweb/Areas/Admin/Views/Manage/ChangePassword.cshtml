@model ENEKweb.Areas.Admin.Models.Manage.ChangePWModel
@{
    ViewData["Title"] = "Change password";
}

<h2>@ViewData["Title"]</h2>
@await Html.PartialAsync("_StatusMessagePartial", TempData["StatusMessage"])


<div class="container-fluid p-0">
    <div class="row no-gutters">
        <div class="col-md-4">
            <form id="change-password-form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.OldPassword"></label>
                    <input asp-for="@Model.OldPassword" class="form-control" />
                    <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.NewPassword"></label>
                    <input asp-for="@Model.NewPassword" class="form-control" />
                    <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ConfirmPassword"></label>
                    <input asp-for="@Model.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Uuenda parooli</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
