@model ENEKweb.Areas.Admin.Models.Administrator.AdminUserModel
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
@await Html.PartialAsync("_StatusMessagePartial", TempData["StatusMessage"])
<div class="container-fluid p-0">
    <div class="row no-gutters">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.PhoneNumber"></label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" />
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </form>
            <a asp-area="Admin" asp-controller="Administrator" asp-action="ChangePassword" asp-route-id="@Model.Id" title="Vaheta Parooli" class="btn btn-secondary mt-2">Change password</a>
            <a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}