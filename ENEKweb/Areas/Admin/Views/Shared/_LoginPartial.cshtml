@using Microsoft.AspNetCore.Identity
@using IdentityData.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User)) {
    <form asp-area="Admin" asp-controller="Identity" asp-action="Logout" method="post" id="logoutForm">
        <ul class="nav flex-column mb-2">
            <li>
                <a asp-area="Admin" asp-controller="Identity" asp-action="Manage" title="Manage" class="nav-link">Hello @UserManager.GetUserName(User)!</a>
            </li>

            <li>
                <button type="submit" class="btn btn-link nav-link">Logout</button>
            </li>
        </ul>
    </form>
}