@using Microsoft.AspNetCore.Identity
@using IdentityData.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User)) {
    <form asp-area="Admin" asp-controller="Identity" asp-action="Logout" method="post" id="logoutForm">
        <ul class="nav flex-column mb-2">
            <li class="nav-item">
                <a asp-area="Admin" asp-controller="Manage" asp-action="Index" title="Muuda kasutaja andmeid" class="nav-link">
                    Tervist @UserManager.GetUserName(User)
                </a>
            </li>

            <li class="nav-item">
                <a asp-area="Admin" asp-controller="Manage" asp-action="Index" title="Muuda kasutaja andmeid" class="nav-link">
                    <i class="fas fa-fw fa-user"></i>Kasutaja info
                </a>
            </li>


            <li class="nav-item">
                <a asp-area="Admin" asp-controller="Manage" asp-action="ChangePassword" title="Vaheta Parooli" class="nav-link">
                    <i class="fas fa-fw fa-key"></i>Vaheta Parool
                </a>
            </li>

            @if (this.User.IsInRole("admin")) {
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Administrator" asp-action="Index" title="List Users" class="nav-link">
                        <i class="fas fa-fw fa-key"></i>[Admin] List Users
                    </a>
                </li>
            }

            <li class="nav-item">
                <button title="Logi välja" type="submit" class="nav-item nav-link btn-link btn">
                    <i class="fas fa-fw fa-user-lock"></i>Logi välja
                </button>
            </li>
        </ul>
    </form>
}