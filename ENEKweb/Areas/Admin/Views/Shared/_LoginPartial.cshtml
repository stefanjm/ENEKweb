@using Microsoft.AspNetCore.Identity
@using IdentityData.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User)) {
    <form asp-area="Admin" asp-controller="Identity" asp-action="Logout" method="post" id="logoutForm">
        <ul class="nav flex-column mb-2">
            <li>
                <a asp-area="Admin" asp-controller="Manage" asp-action="Index" title="Manage" class="nav-link">Tervist @UserManager.GetUserName(User)</a>
            </li>

            <li>
                <a asp-area="Admin" asp-controller="Manage" asp-action="Index" title="Muuda kasutaja andmeid" class="nav-link">Kasutaja info</a>
            </li>


            <li>
                <a asp-area="Admin" asp-controller="Manage" asp-action="ChangePassword" title="Vaheta Parooli" class="nav-link">Vaheta Parool</a>
            </li>

            <li>
                <button type="submit" class="nav-item nav-link btn-link btn">Logi välja</button>
            </li>
        </ul>
    </form>
}