@model ENEKdata.Models.Partnerid.Partner
@{
    ViewData["Title"] = "DETAILS";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<h4>Partner</h4>
<hr />

<div class="container-fluid p-0">
    <div class="row no-gutters">
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt>
                    Partner Website Link
                </dt>
                <dd>
                    <a href="@Html.DisplayFor(model => model.PartnerURL)" target="_blank">@Html.DisplayFor(model => model.PartnerURL)</a>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Image)
                </dt>
                <dd>
                    @if (Model.Image != null) {
                        <img class="partnerid-detail-images" src="~/images/uploaded/partnerid/@Model.Image.ImageFileName" alt="partnerLogo" />
                    }
                    else {
                        <p class="text-info">This Partner does not have an image.</p>
                    }
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>