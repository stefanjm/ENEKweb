@model ENEKweb.Areas.Admin.Models.Partnerid.PartnerFormModel
@{
    ViewData["Title"] = "EDIT";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="container-fluid p-0">
    <div class="row no-gutters">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <p class="text-info m-0">Required</p>
                    <p class="text-info m-0">Max 25 characters</p>
                    <input asp-for="Name" class="form-control" maxlength="25" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <p class="text-info m-0">Max 95 characters</p>
                    <textarea asp-for="Description" class="form-control" maxlength="95"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PartnerURL" class="control-label"></label>
                    <p class="text-info m-0">Max 80 characters</p>
                    <input asp-for="PartnerURL" class="form-control" />
                    <span asp-validation-for="PartnerURL" class="text-danger"></span>
                </div>
                @if (Model.Image != null) {
                <div class="form-group form-check">
                    <p class="text-info">Click on an image to remove it</p>
                    <input type="hidden" asp-for="Image.Id" />
                    <input type="checkbox" asp-for="@Model.RemoveImage" class="form-check-input partnerid-edit-check-input" />
                    <label asp-for="@Model.RemoveImage" class="form-check-label">
                        <img class="partnerid-edit-image" src="~/images/uploaded/partnerid/@Model.Image.ImageFileName" alt="partnerLogo" />
                    </label>
                </div>
                }
                else {
                    <div class="form-group">
                        <p class="text-info control-label">This Partner does not have an image.</p>
                    </div>
                }

                <div class="form-group">
                    <label asp-for="UploadImage" class="control-label">Image</label>
                    <input asp-for="UploadImage" type="file" accept=".jpg, .jpeg, .png" name="UploadImage" class="form-control" />
                    <span asp-validation-for="UploadImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>

        </div>
    </div>

</div>