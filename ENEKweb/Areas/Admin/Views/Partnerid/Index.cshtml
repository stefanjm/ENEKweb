@model IEnumerable<ENEKdata.Models.Partnerid.Partner>
@{
    ViewData["Title"] = "PARTNERID";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
@await Html.PartialAsync("_StatusMessagePartial", TempData["StatusMessage"])
<div class="container-fluid p-0">
    <div class="row no-gutters">
        <div class="col-md-12">
            <p>
                <a class="btn btn-primary" asp-action="Create">Create New</a>
            </p>
            <div class="table-responsive-md">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Image)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var partner in Model) {
                            <tr class="leiunurk-table-tr">
                                <td>
                                    @Html.DisplayFor(modelItem => partner.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => partner.Description)
                                </td>
                                <td>
                                    @if (partner.Image != null) {
                                        <img style="max-height: 40px;" src="~/images/uploaded/partnerid/@partner.Image.ImageFileName" alt="partner_logo" />
                                    }
                                    else {
                                        <span class="text-muted">None</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group-sm" role="group" aria-label="Item manipulate options">
                                        <a asp-action="Edit" asp-route-id="@partner.Id" class="btn btn-primary">Edit</a>
                                        <a asp-action="Details" asp-route-id="@partner.Id" class="btn btn-secondary">Details</a>
                                        <a asp-action="Delete" asp-route-id="@partner.Id" class="btn btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
