@model ENEKweb.Models.LeiunurkIndexModel
@{
    ViewData["Title"] = "LEIUNURK";
    // index counter for different IDs (for bootstraps carousel controls)
    int position = 0;
    // is it the first image iterated over? for bootstrap carousel active class that has to be on at least one slide
    bool firstImg = true;
}

<div class="container" id="leftoversContainer">
    <h2 class="text-title">@ViewData["Title"]</h2>
    <div class="row">
        @foreach (var item in Model.LeiunurkItems) {
            <div class="col-md-4">
                <div class="card card-leiunurk mb-4 shadow-sm">
                    @if (item.Images.Any()) {
                        @foreach (var itemImage in item.Images) {
                            if (firstImg) {
                                <img class="@($"imgSlide{position}") card-image active" src="~/images/uploaded/leiunurk/@itemImage.ImageFileName">
                            }
                            else {
                                <img class="@($"imgSlide{position}") card-image" src="~/images/uploaded/leiunurk/@itemImage.ImageFileName">
                            }

                            firstImg = false;
                        }

                        <a class="img-prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="img-next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>

                        <div class="card-body">
                            <h5 class="card-title">Card title</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>

                        position++;
                        firstImg = true;
                    }
                    else {
                        <div class="card-body justify-content-center align-items-center">
                            <h5 class="card-title">Card title</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
